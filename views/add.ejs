<%- include("partials/header.ejs") %>

<body>
  <%- include("partials/navbar-add-edit.ejs") %>

  <div class="container">

    <!-- Title -->
    <form action="/submit" class="my-5 px-5 container" method="POST">
        <h1 class="my-5 py-3 ">Add, Describe and Rate the games you love!!!</h1>

        <div class="form-group my-3">    
            <label for="gameTitle" >Title</label>
            <input type="text" name="title" class="form-control" id="gameTitle">
        </div>

        <!-- Description -->
    <div class="form-group my-3">
        <label for="exampleFormControlTextarea1">Description</label>
        <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="7"></textarea>
    </div>

        <!-- Rating -->
        <label for="inlineRadio1">Rating:</label>
        <div class="form-check form-check-inline my-3 mx-3">
            <input class="form-check-input" checked="true" type="radio" name="inlineRadioOptions" id="btn1" value="1">
            <label class="form-check-label" for="inlineRadio1"> 1 </label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="btn2" value="2">
            <label class="form-check-label" for="inlineRadio2"> 2 </label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="btn3" value="3">
            <label class="form-check-label" for="inlineRadio1"> 3 </label>
        </div>
        
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="btn4" value="4">
            <label class="form-check-label" for="inlineRadio1"> 4 </label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="btn5" value="5">
            <label class="form-check-label" for="inlineRadio1"> 5 </label>
        </div>
        <div class="clearfix "></div>
        <button type="submit" class="btn btn-dark mt-5">ADD</button>
    </form>
</div>

    <%- include("partials/footer.ejs") %>